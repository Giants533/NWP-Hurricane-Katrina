'open test.ctl'
'set dbuff on'
t = 1
'set gxout shaded'
'clear'
while (t <= 17)
  'set t 't
  'draw title Pressure (hPa)'
  'd pressure'  
  'cbar'
  'swap'
  'printim pressure/NestBiiPressure't'.png png'
  'clear'
  t = t + 1
endwhile


t = 1
'set gxout shaded'
'clear'
while (t <= 17)
  'set t 't
  'draw title Perturbation potential temperature (theta-t0) (K)'
  'd T'  
  'cbar'
  'swap'
  'printim temperature/NestBiiTemperature't'.png png'
  'clear'
  t = t + 1
endwhile

t = 1
